<!-- 공통 부분 -->
<%- include('../../layout/common.ejs') %>

<!-- CSS & JS -->
<style>
    .line-outer-contents {
        height: calc(100vh - 10.8rem);
    }
        .line-outer-contents .contents {
            height: 100%;
        }  
        .line-outer-contents .contents textarea {
            width: 100%;
            height: 100%;
            font-size: 1rem;
            resize: none;
        }          
</style>

<!-- 본문 -->
<%- contentFor('body') %>

<input type="hidden" value="<%= boardGuid %>">

<!-- 제목 & 버튼 -->
<div class="d-flex">
    <div class="ps-1">
        <input type="text" id="txtTitle" class="form-control" value="<%- noticeTitle %>">
    </div>
    <div class="d-flex ms-auto">  
        <div>
            <button type="button" class="btn btn-primary" onclick="saveItem()">저장</button>      
        </div>
        <div class="ms-1">
            <button type="button" class="btn btn-danger" onclick="deleteItem()">삭제</button>
        </div>
    </div>
</div>

<!-- 뒤로가기 & 등록날짜 -->
<div class="d-flex mt-2">
    <div>
        <button type="button" class="btn btn-sm btn-warning" onclick="javascript:history.back();">뒤로가기</button>
    </div>      
    <div class="ms-auto">
        <span>등록날짜: </span><span><%= regDate %></span>
    </div>
</div>

<!-- 내용 -->
<div class="pt-2 line-outer-contents">
    <div class="contents">
        <textarea class="form-control" id="txtContents"><%= contents %></textarea>
    </div>
</div>

<script>
  $(document).ready( function () { 
  });   

  //신규 등록
  function saveItem(){
    alert('아이템 저장');
  };

  //리스트 삭제
  function deleteItem(){
    alert('아이템 삭제');
  };

</script>